# =============================================================================
# üí≥ PAYMENT CONFIGURATION
# =============================================================================
# Stripe Test Keys (Get from: https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# UPI Payment Configuration
UPI_ID=your-upi-id@upi

# =============================================================================
# üì± SMS CONFIGURATION (OPTIONAL)
# =============================================================================
# Fast2SMS API Key (Get from: https://www.fast2sms.com/)
FAST2SMS_API_KEY=your-fast2sms-api-key-here

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# Default is SQLite (for development)
DATABASE_URL=sqlite:///shopserv.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost/shopserv

# For MySQL
# DATABASE_URL=mysql://username:password@localhost/shopserv

# =============================================================================
# üîí SESSION SECURITY
# =============================================================================
# Session cookie settings (True in production with HTTPS)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# üõ°Ô∏è CSRF SECURITY
# =============================================================================
# CSRF protection settings
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# =============================================================================
# üìä LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# üåê CORS CONFIGURATION
# =============================================================================
# Allowed origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# üë§ ADMIN ACCOUNT
# =============================================================================
# Default admin credentials (CHANGE THESE!)
ADMIN_EMAIL=admin@shopserv.com
ADMIN_PASSWORD=admin123

# =============================================================================
# üöÄ RATE LIMITING
# =============================================================================
# Rate limiting settings
RATELIMIT_DEFAULT=200 per day;50 per hour
RATELIMIT_STORAGE_URI=memory://

# =============================================================================
# üìù NOTES & WARNINGS
# =============================================================================
# 1. NEVER commit this .env file to version control
# 2. Always use strong, unique passwords
# 3. Use App Passwords for email, NOT regular passwords
# 4. Enable 2FA on all accounts
# 5. Change all default credentials before production
# 6. Use HTTPS in production
# 7. Regularly rotate API keys and passwords
# 8. Monitor logs for security issues
# =============================================================================
